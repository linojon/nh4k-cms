<ul>
  <% if ::Refinery::Mountains::Admin::MountainsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.mountains_admin_mountains_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_mountains_admin_mountain_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Mountains::Admin::MountainsController.sortable? && ::Refinery::Mountains::Mountain.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Mountains"),
                 refinery.mountains_admin_mountains_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Mountains"),
                 refinery.mountains_admin_mountains_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
